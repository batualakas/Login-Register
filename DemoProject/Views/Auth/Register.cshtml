
@model RegisterViewModel


<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Kayıt Olma Menüsü</title>

    <!-- Font Icon -->
    <link rel="stylesheet" href="~/colorlib-regform-7fonts/material-icon/css/material-design-iconic-font.min.css">

    <!-- Main css -->
    <link rel="stylesheet" href="~/colorlib-regform-7/css/style.css">
   
</head>
<body>

    <div class="main">

        <!-- Sign up form -->
        <section class="signup">
            <div class="container">
                <div class="signup-content">
                    <div class="signup-form">
                        <h3 class="form-title">Kayıt Ol</h3>
                        @if (!string.IsNullOrWhiteSpace(ViewBag.ErrorMessage))
                        {
                            <div class="alert alert-danger">
                                <h3 style="color:red">@ViewBag.ErrorMessage</h3>
                            </div>
                        }
                        <form asp-controller="Auth" asp-action="Register" method="post">

                            <div class="form-group">
                                <label asp-for="FirstName"><i class="zmdi zmdi-account material-icons-name"></i></label>
                                <input type="text" asp-for="FirstName" placeholder="Adınız" />
                                <span class="text-danger" asp-validation-for="FirstName"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="LastName"><i class="zmdi zmdi-account material-icons-name"></i></label>
                                <input type="text" asp-for="LastName" placeholder="Soyadınız" />
                                <span class="text-danger" asp-validation-for="LastName"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Email"><i class="zmdi zmdi-email"></i></label>
                                <input type="email" asp-for="Email" placeholder="Email Adresiniz" />
                                <span class="text-danger" asp-validation-for="Email"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Password"><i class="zmdi zmdi-lock"></i></label>
                                <input type="password" asp-for="Password" placeholder="Şifreniz" />
                                <span class="text-danger" asp-validation-for="Password"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="PasswordConfirm"><i class="zmdi zmdi-lock-outline"></i></label>
                                <input type="password" asp-for="PasswordConfirm" placeholder="Şifre Tekrar" />
                                <span class="text-danger" asp-validation-for="PasswordConfirm"></span>
                            </div>
                           @* <div class="form-group">
                                <input type="checkbox" name="agree-term" id="agree-term" class="agree-term" />
                                <label for="agree-term" class="label-agree-term"><span><span></span></span>Hizmet şartlarındaki tüm ifadeleri kabul ediyorum </label>
                            </div>*@
                            <div class="form-group form-button">
                                <input type="submit" name="signup" id="signup" class="form-submit" value="Kayıt Ol" />
                            </div>
                        </form>
                    </div>
                    <div class="signup-image">
                        <figure><img src="~/colorlib-regform-7/images/sensor.jpg" alt="sing up image"></figure>
                        <a href="/Auth/Login" class="signup-image-link">Hesabım Var</a>
                    </div>
                </div>
            </div>
        </section>

     

    </div>

    <!-- JS -->
    <script src="~/colorlib-regform-7vendor/jquery/jquery.min.js"></script>
    <script src="~/colorlib-regform-7js/main.js"></script>
</body>
</html>
